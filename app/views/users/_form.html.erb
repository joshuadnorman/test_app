<div class="container">
   <div class="row justify-content-center">
      <div class="col-10">
         <%= render 'shared/errors',obj: @user %>
         <%= form_with(model: @user,class:"shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
<p>
         <div class="form-group row text-light">
            <%= f.label :username,class:"col-2 col-form-label" %>
            <div class="col-10">
               <%= f.text_field :username,class:"form-control shadow rounded",placeholder:"Username" %>
            </div>
         </div>
</p>
<p>
         <div class="form-group row text-light">
            <%= f.label :email,class:"col-2 col-form-label" %>
            </br>
            <div class="col-10">
               <%= f.email_field :email,class:"form-control shadow rounded",placeholder:"E-mail address" %>
            </div>
         </div>
</p>
<p>
         <div class="form-group row text-light">
            <%= f.label :password,class:"col-2 col-form-label" %>
            </br>
            <div class="col-10">
               <%= f.password_field :password,class:"form-control shadow rounded",placeholder:"Password" %>
            </div>
         </div>
</p>

         <div class="form-group row justify-content-center">
            <%=f.submit(@user.new_record? ? "Sign Up":"Update Account", class:"btn btn-outline-light bnt-lg col-4")  %>
         </div>

         <%end%>
      </div>
   </div>
   <div id="return" class=" text-center mb-3">
      <%= link_to ' [ Return to articles index ] ',articles_path(),class:"text-info", data: { "turbo-method": :get } %>
   </div>
</div>