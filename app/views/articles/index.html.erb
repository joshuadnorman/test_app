<h1 class="text-center mt-4">Articles</h1>
<div class=" text-center">
    <%= link_to 'New Article',new_article_path(),class:"btn btn-success mb-0", data: { "turbo-method": :get } %>
</div>
<br>
<% @articles.each do |article |%>
<div class="container">
   <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
         <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
               By Joshua Norman 
            </div>
            <div class="card-body">
               <h5 class="card-title"><%=link_to article.title, article_path(article), class: "text-success" %></h5>
               <p class="card-text"><%= truncate(article.description,length:100)%></p>
               <%= link_to 'Show',article_path(article),class:"btn btn-outline-success", data: { "turbo-method": :get } %>
               <%= link_to 'Edit',edit_article_path(article),class:"btn btn-outline-warning", data: { "turbo-method": :get } %>
               <%= link_to 'Delete',article_path(article),class:"btn btn-outline-danger", data: { "turbo-method": :delete,"turbo_confirm": "Are you sure" } %>
            </div>
            <div class="card-footer text-muted">
               <small>
               Created <%= time_ago_in_words(article.created_at) %> ago,
               edited <%= time_ago_in_words(article.updated_at) %> ago 
               </small>
            </div>
         </div>
      </div>
   </div>
   <% end %>
</div>